@model IEnumerable<TrueCrimeRepo.Models.PerpetratorListItem>

@{
    ViewBag.Title = "Index";
}

<img src="~/Images/Perpetrator.png" style="width: 100%" />
@*<h2>Index</h2>*@
@*<a href='@Url.Action("Create")' class="btn btn-success"> ADD A PERPETRATOR TO A TRUE CRIME</a>*@
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.PerpetratorID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Crime.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CrimeID)
        </th>*@
        @*<th class="col-md-8">
            To view details, edit, or delete, please click below.
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.PerpetratorID)
            </td>*@
            <td>
               @Html.DisplayFor(modelItem => item.Crime.Title)
            </td>
            <td>
                @*<a href="@Url.Action("Details", "Crime", new {id = item.PerpetratorID})">@Html.DisplayFor(modelItem = item.Name)</a>*@
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.CrimeID)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PerpetratorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PerpetratorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PerpetratorID })
            </td>
        </tr>
    }

</table>
